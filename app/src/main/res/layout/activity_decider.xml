<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Decider"
    android:orientation="vertical">



        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:gravity="center"
            android:text="@string/are_you12"
            android:textSize="40sp" />

        <RadioGroup
            android:id="@+id/rad1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <RadioButton
                android:id="@+id/ap3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/candidate"
                android:layout_marginTop="80dp"/>

            <RadioButton
                android:id="@+id/ap4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/employer"
                android:layout_marginTop="10dp"/>
        </RadioGroup>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear"
            android:layout_marginLeft="300sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="300sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Next"
            android:layout_marginLeft="300sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="300sp" />

    <Button
        android:id="@+id/pendingid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Pending lists" />
</LinearLayout>

